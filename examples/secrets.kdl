secret "API_TOKEN" {
  source "hostEnv"
}

// Placeholder; replace with a real provider (e.g. cmd "vault kv get ...").
secret "BUILD_HASH" {
  source "cmd"
  cmd "echo abc123"
}

step "use-secrets" {
  image "alpine:latest"
  secret "API_TOKEN" env="API_TOKEN"
  secret "BUILD_HASH" env="BUILD_HASH"
  // Demo only -- printing secrets to logs defeats redaction in production.
  run "echo \"hash=$BUILD_HASH\""
}
